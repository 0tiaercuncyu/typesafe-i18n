{
	"name": "langauge",
	"version": "0.16.1",
	"description": "A lightweight localization engine for JavaScript and TypeScript projects",
	"homepage": "https://github.com/ivanhofer/langauge",
	"author": "ivanhofer",
	"keywords": [
		"l10n",
		"i18n",
		"lightweight",
		"localization",
		"localization engine",
		"typescript"
	],
	"license": "MIT",
	"exports": {
		"./package.json": "./package.json",
		"./formatters": "./formatters/index.js",
		"./formatters/*": "./formatters/*.js",
		"./rollup/rollup-plugin-langauge-watcher": "./rollup/rollup-plugin-langauge-watcher.js",
		"./*": "./esm/*",
		".": "./esm/index.js"
	},
	"browser": "dist/index.js",
	"main": "cjs/index.js",
	"types": "cjs/index.d.ts",
	"files": [
		"/cjs",
		"/dist",
		"/esm",
		"/formatters",
		"/node",
		"/rollup"
	],
	"scripts": {
		"build": "npm run build:browser && npm run build:cjs && npm run build:esm && npm run build:formatters && npm run build:plugin && npm run build:watcher",
		"build:browser": "rollup -c rollup-browser.config.ts",
		"build:cjs": "tsc -p tsconfig-cjs.json",
		"build:esm": "tsc -p tsconfig-esm.json",
		"build:formatters": "tsc -p tsconfig-formatters.json && rollup -c rollup-formatters.config.ts",
		"build:plugin": "tsc -p tsconfig-plugin.json && rollup -c rollup-plugin.config.ts",
		"build:watcher": "rollup -c rollup-watcher.config.ts",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"test": "uvu -r ts-node/register -i update.ts tests",
		"test:watch": "watchlist src tests -- npm test",
		"test:update-generated-files": "ts-node tests/generated/update.ts",
		"test:size": "size-limit"
	},
	"dependencies": {
		"typesafe-utils": "^1.10.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "^11.0.1",
		"@rollup/plugin-typescript": "^8.1.0",
		"@size-limit/preset-small-lib": "^4.9.1",
		"@types/node": "^14.14.20",
		"@typescript-eslint/eslint-plugin": "^4.12.0",
		"@typescript-eslint/parser": "^4.12.0",
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"prettier": "^2.2.1",
		"rollup": "^2.36.0",
		"rollup-plugin-node-externals": "^2.2.0",
		"rollup-plugin-terser": "^7.0.2",
		"size-limit": "^4.9.1",
		"tiny-glob": "^0.2.8",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3",
		"uvu": "^0.5.1",
		"watchlist": "^0.2.3"
	}
}
