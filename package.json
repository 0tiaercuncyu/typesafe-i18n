{
	"name": "typesafe-i18n",
	"version": "2.0.5",
	"description": "An opinionated, full type-safe, lightweight localization library for TypeScript projects with no external dependencies.",
	"homepage": "https://github.com/ivanhofer/typesafe-i18n",
	"repository": {
		"type": "git",
		"url": "https://github.com/ivanhofer/typesafe-i18n"
	},
	"author": "ivanhofer",
	"keywords": [
		"l10n",
		"i18n",
		"lightweight",
		"localization",
		"localization engine",
		"typescript"
	],
	"license": "MIT",
	"module": "esm/index.js",
	"exports": {
		"./formatters": {
			"import": "./esm/formatters/index.js",
			"require": "./cjs/formatters/index.js"
		},
		"./formatters/*": {
			"import": "./esm/formatters/*.js",
			"require": "./cjs/formatters/*.js"
		},
		"./svelte": "./svelte/svelte-store.js",
		"./rollup/rollup-plugin-typesafe-i18n-watcher": "./rollup/rollup-plugin-typesafe-i18n-watcher.js",
		"./package.json": "./package.json",
		"./*": {
			"import": "./esm/*",
			"require": "./cjs/*"
		},
		".": {
			"import": "./esm/index.js",
			"require": "./cjs/index.js"
		}
	},
	"browser": "dist/index.min.js",
	"main": "cjs/index.js",
	"types": "esm/index.d.ts",
	"files": [
		"/cjs",
		"/dist",
		"/esm",
		"/formatters",
		"/node",
		"/rollup"
	],
	"scripts": {
		"dev": "tsc -p tsconfig-rollup.json -w",
		"dev:watcher": "rollup -c rollup-watcher.config.ts -w",
		"build": "npm run build:watcher && npm run build:rollup && npm run build:formatters && npm run build:esm && npm run build:cjs && npm run build:browser && npm run build:svelte",
		"build:browser": "rollup -c rollup-browser.config.ts",
		"build:cjs": "tsc -p tsconfig-cjs.json",
		"build:esm": "tsc -p tsconfig-esm.json",
		"build:svelte": "rollup -c rollup-svelte.config.ts && tsc -p tsconfig-svelte.json --emitDeclarationOnly",
		"build:formatters": "tsc -p tsconfig-formatters.json && rollup -c rollup-formatters.config.ts",
		"build:rollup": "rollup -c rollup-rollup.config.ts && tsc -p tsconfig-rollup.json --emitDeclarationOnly",
		"build:watcher": "rollup -c rollup-watcher.config.ts",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"test": "uvu -r ts-node/register -i update.ts -i index.ts tests",
		"test:watch": "watchlist src tests -- npm test",
		"test:update-generated-files": "ts-node tests/generated/update.ts",
		"test:size": "size-limit"
	},
	"dependencies": {
		"typesafe-utils": "^1.11.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-node-resolve": "^11.1.1",
		"@rollup/plugin-replace": "^2.3.4",
		"@rollup/plugin-typescript": "^8.1.1",
		"@size-limit/preset-small-lib": "^4.9.2",
		"@types/node": "^14.14.27",
		"@typescript-eslint/eslint-plugin": "^4.15.0",
		"@typescript-eslint/parser": "^4.15.0",
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"prettier": "^2.2.1",
		"rollup": "^2.39.0",
		"rollup-plugin-node-externals": "^2.2.0",
		"rollup-plugin-terser": "^7.0.2",
		"size-limit": "^4.9.2",
		"svelte": "^3.32.3",
		"tiny-glob": "^0.2.8",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.5",
		"uvu": "^0.5.1",
		"watchlist": "^0.2.3"
	}
}
