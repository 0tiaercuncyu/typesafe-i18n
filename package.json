{
	"name": "langauge",
	"version": "0.7.1",
	"description": "A lightweight localization engine for JavaScript and TypeScript projects",
	"homepage": "https://github.com/ivanhofer/langauge",
	"author": "ivanhofer",
	"keywords": [
		"lightweight",
		"localization",
		"localization engine",
		"typescript",
		"l10n",
		"i18n"
	],
	"license": "MIT",
	"main": "lib/cjs/index.js",
	"module": "lib/esm/index.js",
	"browser": "dist/langauge.js",
	"files": [
		"/lib"
	],
	"types": "lib/esm/index.d.ts",
	"scripts": {
		"build": "npm run build:browser && npm run build:cjs && npm run build:esm",
		"build:browser": "tsc && tsc -p tsconfig-cjs.json",
		"build:cjs": "tsc -p tsconfig-cjs.json",
		"build:esm": "tsc",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"test": "uvu -r ts-node/register tests",
		"test:watch": "watchlist src tests -- npm test"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^11.0.1",
		"@rollup/plugin-typescript": "^8.1.0",
		"@types/node": "^14.14.16",
		"@typescript-eslint/eslint-plugin": "^4.11.1",
		"@typescript-eslint/parser": "^4.11.1",
		"eslint": "^7.16.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-prettier": "^3.3.0",
		"prettier": "^2.2.1",
		"rollup-plugin-terser": "^7.0.2",
		"ts-node": "^9.1.1",
		"typesafe-utils": "^1.8.0",
		"typescript": "^4.1.3",
		"uvu": "^0.5.1",
		"watchlist": "^0.2.3"
	}
}
